<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#6ED479"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#378940"
        android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="검사완료!"
        android:textSize="27dp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:padding="30dp"
        android:gravity="center"/>

        <TextView
            android:id="@+id/weakness"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="{log}개 취약점 발견"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/inform"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="각 항목을 클릭하면, 취약점에 대한 상세설명을 볼 수 있습니다."
            android:textSize="12dp"
            android:textColor="#FFFFFF" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ListView
            android:id="@+id/wifiresult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </ListView>

        <ExpandableListView
            android:id="@+id/iotresult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/darker_gray"
            android:childDivider="@android:color/darker_gray"
            android:dividerHeight="1dp"
            android:fadingEdge="none" />
    </LinearLayout>
</LinearLayout>
